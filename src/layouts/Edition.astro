---
import "@fontsource-variable/inter/standard.css";
import "tailwindcss/tailwind.css";

import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

const { title } = Astro.props;
const backgroundcolor = " bg-cyan-800";
const githuburl = "https://github.com/orgs/wiener-diarium/";
const textcolor = "text-gray-900";
---

<html lang="en">
	<head>
		<BaseHead title={title} />
		<link rel="stylesheet" href="/style.css" />
		<link rel="stylesheet" href="/micro-editor.css" />
	</head>
	<body class="flex h-screen flex-col justify-between">
		<header>
			<Header backgroundcolor={backgroundcolor} />
		</header>
		<main class="mb-auto">
			<slot />
		</main>
		<Footer backgroundcolor="bg-white" github_url={githuburl} textcolor={textcolor} />
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"
		></script>
		<script type="text/javascript" is:inline src="/mark.js"></script>
		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/openseadragon/4.0.0/openseadragon.min.js"
		></script>
		<script is:inline src="/osd_scroll.js"></script>
		<script is:inline src="https://unpkg.com/de-micro-editor@0.3.1/dist/de-editor.min.js"></script>
		<script type="text/javascript" is:inline src="/run.js"></script>
		<script type="text/javascript" is:inline src="/listStopProp.js"></script>
	</body>
</html>
