---
import "@fontsource-variable/inter/standard.css";
import "tailwindcss/tailwind.css";

import PiwikTracker from "piwik-tracker";

import BaseHead from "../components/BaseHead.astro";
import EditionAside from "../components/EditionAside.astro";
import Footer from "../components/Footer.astro";
// import Header from "../components/Header.astro";

// Initialize with your site ID and Matomo URL
var piwik = new PiwikTracker(94, "https://matomo.acdh.oeaw.ac.at/piwik.php");
// Matomo works with absolute URLs, so you have to provide protocol and hostname
var baseUrl = "https://wiener-diarium.github.io/curved-conjunction";
// Track a request URL:
piwik.track(baseUrl + "/edition");

const { title, baseurl, issue, corpus } = Astro.props;
const backgroundcolor = "bg-cyan-800";
const githuburl = "https://github.com/wiener-diarium/";
const textcolor = "text-gray-900";
---

<html lang="en">
	<head>
		<BaseHead title={title} />
		<link rel="stylesheet" href={`${baseurl}style.css`} />
		<link
			rel="stylesheet"
			href="https://unpkg.com/de-micro-editor@0.4.2/src/css/micro-editor.css"
		/>
	</head>
	<body class="flex h-screen flex-col justify-between">
		<!-- <header>
			<Header backgroundcolor={backgroundcolor} baseurl={baseurl} />
		</header> -->
		<main class="mb-auto flex flex-row">
			<EditionAside
				textcolor={textcolor}
				backgroundcolor={backgroundcolor}
				baseurl={baseurl}
				width="basis-2/12"
				issue={issue}
				corpus={corpus}
			/>
			<div class="basis-10/12">
				<slot />
			</div>
		</main>
		<Footer
			backgroundcolor="bg-white"
			github_url={githuburl}
			textcolor={textcolor}
			baseurl={baseurl}
		/>
		<script
			is:inline
			src="https://cdnjs.cloudflare.com/ajax/libs/openseadragon/4.1.0/openseadragon.min.js"
		></script>
		<script is:inline src={`${baseurl}osd_scroll.js`}></script>
		<script is:inline src="https://unpkg.com/de-micro-editor@0.4.0/dist/de-editor.min.js"></script>
		<script is:inline src={`${baseurl}run.js`}></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/mark.js/8.11.1/mark.min.js"
		></script>
		<script type="text/javascript" is:inline src={`${baseurl}mark.js`}></script>
		<script type="text/javascript" is:inline src={`${baseurl}listStopProp.js`}></script>
	</body>
</html>
