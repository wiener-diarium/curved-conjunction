---
import { type CollectionEntry, getCollection } from "astro:content";

import EventContent from "../../components/EventContent.astro";
import TextImage from "../../components/TextImage.astro";
import Page from "../../layouts/Page.astro";

type Props = CollectionEntry<"events">;

export const components = { TextImage };

export async function getStaticPaths() {
	const events = await getCollection("events");
	return events.map((event) => ({
		params: { slug: event.slug },
		props: { event },
	}));
}

const { event } = Astro.props;
const { Content } = await event.render();
const baseurl = import.meta.env.BASE_URL ? import.meta.env.BASE_URL : "";
---

<Page {...event.data} title={event.data.title} baseurl={baseurl}>
	<EventContent {...event.data}>
		<Content components={{ ...components }} />
	</EventContent>
</Page>
