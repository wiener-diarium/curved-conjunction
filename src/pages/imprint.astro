---
import Page from "../layouts/Page.astro";

async function impressum() {
	const response = await fetch("https://imprint.acdh.oeaw.ac.at/21966/?locale=de&format=html");
	const impressum = response.body;
	return impressum;
}
const imprint = impressum();
const baseurl = import.meta.env.BASE_URL ? import.meta.env.BASE_URL : "";
---

<Page title="Imprint" baseurl={baseurl}>
	<div class="container mx-auto my-12">{imprint}</div>
</Page>
<style>
	h2 {
		padding: 2rem 0;
		font-size: 2rem !important;
	}

	h3 {
		padding: 2rem 0;
		font-size: 2rem;
	}

	p {
		padding: 2rem 0;
		font-size: 2rem;
	}
</style>
