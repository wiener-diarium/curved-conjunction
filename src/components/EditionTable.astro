---
import { readdir } from "node:fs/promises";

const entries = await readdir("edition", { withFileTypes: true });
const { baseurl } = Astro.props;
---

<div>
	<ul>
		{
			entries.map((s) => {
				return (
					<li>
						<a href={`${baseurl}edition/${s.name.replace(".html", "")}`}>{s.name}</a>
					</li>
				);
			})
		}
	</ul>
</div>
