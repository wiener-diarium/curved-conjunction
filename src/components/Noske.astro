<div class="my-8">
	<div class="mx-auto px-5 py-4 text-center align-middle">
		<div class="px-4">
			<h4 class="pt-2 text-lg">Einfache Suche in den Wiener Diarium Transkripten</h4>
			<div class="text-sm text-gray-600">
				<a target="_blank" href="https://diarium-noske.acdh-dev.oeaw.ac.at/crystal"
					>Erweiterte Suche in Crystal</a
				>
			</div>
			<div id="noske-search" class="mx-auto w-8/12 text-center"></div>
		</div>
	</div>
</div>

<script>
	import { NoskeSearch } from "acdh-noske-search";

	const search = new NoskeSearch({
		base: "https://diarium-noske.acdh-dev.oeaw.ac.at",
		corpname: "diarium",
		viewmode: "kwic",
		attrs: "word,id",
		format: "json",
		structs: "doc,p,head,list,docTitle,imprimatur,g",
		kwicrightctx: "100#",
		kwicleftctx: "100#",
		refs: "doc.id,p.id,head.id,list.id,docTitle.id,imprimatur.id",
		pagesize: 20,
		fromp: 1,
		inputPlaceholder: "Suche nach Wort, Phrase oder CQL-Query (Regex erlaubt)",
		customUrl: "https://digitarium.acdh-dev.oeaw.ac.at/edition",
		urlparam: "&img=on",
	});

	search.search();
</script>
