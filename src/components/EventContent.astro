---
import FormatUrl from "../components/FormatUrl.astro";

const { title, date, authors, type, place, url, image } = Astro.props;
const baseurl = "/";
---

<div class="my-8 flex flex-col">
	<div class="container mx-auto max-w-[1200px] py-6">
		<div class="mx-auto flex max-w-[800px]">
			{image && <img class="rounded-lg" src={`${baseurl}${image?.slice(1)}`} alt={title} />}
		</div>
		<div class="my-6 border-b-2 text-gray-400">
			<h1 class="mb-8 text-center text-4xl">{title}</h1>
			<p>{type}</p>
			<p>
				{date ? "Datum: " + date.toLocaleDateString("de-DE") : ""}{place ? " | Ort: " + place : ""}
				{url ? " | Url: " : ""}<FormatUrl url={url} />
			</p>
			<p>Autor: {authors.map((author) => author.lastName + ", " + author.firstName + " ")}</p>
		</div>
		<div class="py-6">
			<slot />
		</div>
	</div>
</div>
<style is:global>
	p {
		margin: 0.5rem 0 !important;
	}

	p a {
		color: #3182ce !important;
	}
</style>
